@model IEnumerable<ParkingOccupationsAdminViewModel>

<body style="background-color: #4C98CF">
    <h1 style="color: #CCE5EA">Parking Occupations History</h1>
    <br />
    <form asp-action="ParkingOccupations" method="GET" style="display: flex; flex-direction: row;">
        <input type="number" id="id" name="id" class="form-control" style="background-color: #CCE5EA; width: 200px; height: 40px; margin-right: 10px" placeholder="Parking Spot Id">
        <input type="text" id="licensePlate" name="licensePlate" class="form-control" style="background-color: #CCE5EA; width: 200px; height: 40px; margin-right: 10px" placeholder="License Plate">
        <input type="text" id="userEmail" name="userEmail" class="form-control" style="background-color: #CCE5EA; width: 200px; height: 40px; margin-right: 10px" placeholder="User Email">
        <button class="btn btn-success p-3 fw-bold rounded-pill" style="background-color: #3BBD6E; width: 100px; height: 40px; border: none; box-shadow: none; display: flex; justify-content: center; align-items: center;" type="submit">Filter</button>
    </form>
    <br />
    <table class="table table-borderless" style="border: none; box-shadow: none; color: #CCE5EA">
        <thead>
            <tr>
                <th scope="col" style="color: #CCE5EA">Spot Id</th>
                <th scope="col" style="color: #CCE5EA">License Plate</th>
                <th scope="col" style="color: #CCE5EA">Vehicle Owner Email</th>
                <th scope="col" style="color: #CCE5EA">Vehicle Owner FullName</th>
                <th scope="col" style="color: #CCE5EA">Enter DateTime</th>
                <th scope="col" style="color: #CCE5EA">Exit DateTime</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var occupation in Model)
                {
                    <tr>
                        <td style="font-size: 18px; color: #CCE5EA">@occupation.ParkingSpotId</td>
                        <td style="font-size: 18px; color: #CCE5EA">@occupation.VehicleLicensePlate</td>
                        <td style="font-size: 18px; color: #CCE5EA">@occupation.VehicleOwnerEmail</td>
                        <td style="font-size: 18px; color: #CCE5EA">@occupation.VehicleOwnerFullName</td>
                        <td style="font-size: 18px; color: #CCE5EA">@occupation.EnterDateTime.ToString("dd.MM.yyyy HH:mm:ss")</td>
                        <td style="font-size: 18px; color: #CCE5EA">@(occupation.ExitDateTime.HasValue ? occupation.ExitDateTime.Value.ToString("dd.MM.yyyy HH:mm:ss") : "N/A")</td>
                    </tr>
                }
            }
            else
            {
                <p style="color: #CCE5EA">There Is No Activity In The Parking Spot</p>
            }
        </tbody>
    </table>
</body>