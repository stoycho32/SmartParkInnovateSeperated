<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartParkInnovate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartParkInnovate.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="outset navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #4C99CF">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:#CCE5EA" asp-area="" asp-controller="Home" asp-action="Index">SmartParkInnovate</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" style="color:#CCE5EA" asp-area="Admin" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" style="color:#CCE5EA" asp-area="Admin" asp-controller="Parking" asp-action="ParkingSpots">Manage Parking Spots</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" style="color:#CCE5EA" asp-area="Admin" asp-controller="Vehicle" asp-action="Vehicles">Manage Vehicles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" style="color:#CCE5EA" asp-area="Admin" asp-controller="Post" asp-action="Posts">Manage Posts</a>
                            </li>
                        }
                    </ul>
                    <partial name="_AdminPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted" style="background-color: #4C98CF">
        <div class="container" style="color: #CCE5EA">
            &copy; @DateTime.Today.Year - <span class="text-danger">Admin Only Area</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
