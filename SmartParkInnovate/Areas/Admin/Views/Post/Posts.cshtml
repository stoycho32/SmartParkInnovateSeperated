@model IEnumerable<AdminPostViewModel>


<body style="background-color: #4C98CF">
    <h3 style="color: #CCE5EA">Manage Posts</h3>
    <br />
    @if (Model.Count() > 0)
    {
        @foreach (var post in Model)
        {
            <div class="card" style="border-radius: 30px; background-color: #41CAC6;">
                <div class="card-header d-flex justify-content-between align-items-center" style="color: #CCE5EA">
                    <div>
                        @post.PostDate
                        @if (post.IsDeleted == true)
                        {
                            <span>(Deleted)</span>
                        }
                    </div>
                    <div class="d-flex">
                        <div class="dropdown">
                            <button class="btn btn-link btn-sm dropdown-toggle-split" style="color: #CCE5EA; font-size: 25px; text-decoration: none; border: none; box-shadow: none;" type="button" id="likesDropDowmMenu" data-bs-toggle="dropdown">
                                ☰
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="PostOptions" style="border-radius: 15px; background-color: #41CAC6; border: 2px solid #4C98CF; box-shadow: none;">
                                <li>
                                    <a asp-area="Admin" asp-controller="Post" asp-action="PostComments" class="btn btn-link btn-sm"
                                       style="color: #CCE5EA; font-size: 18px; text-decoration: none; border: none; box-shadow: none">Manage Comments</a>
                                </li>
                                @if (post.IsDeleted == false)
                                {
                                    <li>
                                        <a asp-area="Admin" asp-controller="Post" asp-action="DeletePost" asp-route-id="@post.Id" class="btn btn-link btn-sm"
                                           style="color: #CCE5EA; font-size: 18px; text-decoration: none; border: none; box-shadow: none">Delete Post</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-area="Admin" asp-controller="Post" asp-action="ReturnPost" asp-route-id="@post.Id" class="btn btn-link btn-sm"
                                           style="color: #CCE5EA; font-size: 18px; text-decoration: none; border: none; box-shadow: none">Return Comment</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title" style="color: #CCE5EA">@post.WorkerUserName</h5>
                    <p class="card-text" style="color: #CCE5EA">@post.PostBody</p>
                </div>
            </div>
            <br />
        }
    }
    else
    {
        <p style="color: #CCE5EA">There Are No Posts Available</p>
    }
</body>