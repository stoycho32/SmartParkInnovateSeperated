@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />
<h1 class="text-center" style="color: #CCE5EA">@ViewData["Title"]</h1>

@*style="background-color: #4C98CF"*@

<body style="background-color: #4C98CF">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" style="background-color: #CCE5EA" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" style="background-color: #CCE5EA" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                    </div>
                    <br />
                    <div>
                        @*#4873A6*@
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #4873A6 !important; color: #CCE5EA; border: 0px;">Log in</button>
                    </div>
                        <div class="checkbox; accordion-body" style="color: #CCE5EA;">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" style="background-color: #4873A6; border: 0px" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                </form>
            </section>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
