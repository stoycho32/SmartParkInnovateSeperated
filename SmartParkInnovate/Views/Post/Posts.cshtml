@model List<PostViewModel>


<body style="background-color: #4C98CF">
    <h1 class="text-center" style="color: #CCE5EA">Posts</h1>

    <br />
    @if (Model.Count() > 0)
    {
        foreach (var post in Model.OrderByDescending(c => c.PostDate))
        {
            <div class="card text-left">
                <div class="card-header" style="color: #CCE5EA">
                    @post.WorkerUserName
                </div>
                <div class="card-body">
                    <p class="card-text" style="color: #CCE5EA; text-align: justify; text-justify: inter-word; line-height: 1;">@post.PostBody</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
                <div class="card-footer text-muted" style="color: #CCE5EA">
                    @post.PostDate
                </div>
            </div>
        }
    }
    else
    {
        <h3 class="text-center" style="color: #CCE5EA">There Are No Posts Available</h3>
    }
</body>
