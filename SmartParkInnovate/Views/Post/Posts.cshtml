@model List<PostViewModel>


<h1 class="text-center">Posts</h1>

<br />
@if (Model.Count() > 0)
{
    foreach (var post in Model.OrderByDescending(c => c.PostDate))
    {
        <div class="card text-left">
            <div class="card-header">
                @post.WorkerUserName
            </div>
            <div class="card-body">
                <p class="card-text" style="text-align: justify; text-justify: inter-word; line-height: 1;">@post.PostBody</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            <div class="card-footer text-muted">
                @post.PostDate
            </div>
        </div>
    }
}
else
{
    <p class="text-center">There Are No Posts Available</p>
}
